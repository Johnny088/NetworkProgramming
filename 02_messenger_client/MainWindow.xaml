<Window x:Class="_02_messenger_client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_02_messenger_client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <Label Margin="5" FontWeight="Bold" FontSize="20" >Message: </Label>
            <Button Padding="10 5" Margin="5" FontWeight="Bold" FontSize="20" DockPanel.Dock="Right" Background="lime" 
                    Click="Send_button">Send</Button>
            <Button Padding="10 5" Margin="5" FontWeight="Bold" FontSize="20" DockPanel.Dock="Right" Background="lime"
                    Click="Leave">Leave</Button>
            <Button Padding="10 5" Margin="5" FontWeight="Bold" FontSize="20" DockPanel.Dock="Right" Background="lime"
                    Click="Join">Join</Button>
            <TextBox Name="msgText" Margin="5" VerticalContentAlignment="Center"></TextBox>
        </DockPanel>
        <TextBlock DockPanel.Dock="Top" TextAlignment="Center" FontWeight="Bold" FontSize="30">Messenger</TextBlock>
        <ListBox Name="list" ItemsSource="{Binding}"></ListBox>
    </DockPanel>
</Window>
