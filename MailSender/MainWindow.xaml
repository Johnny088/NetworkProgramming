<Window x:Class="MailSender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailSender"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="850">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition Height="20"/>
            
        </Grid.RowDefinitions>
        <Image Source="/images/spaceship.jpg" Stretch="Fill" Opacity="1" Panel.ZIndex="100" Grid.ColumnSpan="8" Grid.RowSpan="12"></Image>
        <Label Grid.Column="1" Grid.Row="2">from</Label>
        <Label Grid.Column="1" Grid.Row="4">Subject</Label>
        <Label Grid.Column="1" Grid.Row="6">To</Label>
        <Button Grid.Column="2" Grid.Row="8" Margin="24 0">Attach a file</Button>
        <Button Grid.Column="3" Grid.Row="8" Margin="24 0" Click="Send_btn">send</Button>
        <Button Grid.Column="4" Grid.Row="8" Margin="24 0">new</Button>
            <Label Grid.Column="5" Grid.Row="1" FontSize="16" Margin="20 0 0 0">Atached items</Label>
        <ListBox Grid.Column="5" Grid.Row="2" Grid.ColumnSpan="2" Grid.RowSpan="6"></ListBox>
        <TextBox Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="2" VerticalContentAlignment="Center" Name="from"></TextBox>
        <TextBox Grid.Column="2" Grid.Row="4" Grid.ColumnSpan="2" VerticalContentAlignment="Center" Name="subject"></TextBox>
        <TextBox Grid.Column="2" Grid.Row="6" Grid.ColumnSpan="2" VerticalContentAlignment="Center" Name="to"></TextBox>
        <TextBox Grid.Column="1" Grid.Row="10" Grid.ColumnSpan="6" Name="body"></TextBox>
    </Grid>
</Window>
