<Window x:Class="_03_RegionsCodesClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_03_RegionsCodesClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel Background="Bisque">
        <DockPanel DockPanel.Dock="Top">
            <Label Margin="5" FontWeight="Bold" FontSize="25" DockPanel.Dock="Left">Message</Label>
            <Button Margin="5" DockPanel.Dock="right" FontWeight="Bold" FontSize="20" Background="lime" Padding="30 5" Click="connectBTN">connect</Button>
            <Button Margin="5" DockPanel.Dock="right" FontWeight="Bold" FontSize="20" Background="lime" Padding="30 5" Click="disconnectBTN">disconnect</Button>
            <Button Margin="5" DockPanel.Dock="right" FontWeight="Bold" FontSize="20" Background="lime" Padding="30 5" Click="sendBTN">check</Button>
            <TextBox DockPanel.Dock="top" Margin="5" Name="msgText" VerticalContentAlignment="Center"></TextBox>
        </DockPanel>
        <TextBlock DockPanel.Dock="Top" TextAlignment="Center" FontWeight="Bold" FontSize="30" >Codes Info</TextBlock>
        <ListBox Name="list" ItemsSource="{Binding}"></ListBox>
    </DockPanel>
</Window>
